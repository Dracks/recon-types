{
  "$id": "https://raw.githubusercontent.com/Codename-Recon/types/master/schema/terrain.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Terrain",
  "type": "object",
  "properties": {
    "name": { "$ref": "/schema/enum.json#/definitions/terrain_sprite" },
    "description": { "type": "string" },
    "terrain": {
      "type": "integer",
      "description": "Uses index of enum/terrain as an id reference.",
      "minimum": 0,
      "maximum": 18
    },
    "defense": { "type": "integer", "minimum": 0, "maximum": 4 },
    "health": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "can_capture": {
      "type": "boolean"
    },
    "owner": {
      "type": "integer",
      "description": "0 = neutral, all other numbers coorespond to player number",
      "minimum": 0
    }
  },
  "required": [
    "name",
    "description",
    "terrain",
    "defense",
    "health",
    "can_capture",
    "owner"
  ]
}
