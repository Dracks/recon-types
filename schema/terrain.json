{
  "$id": "http://localhost:3000/schema/terrain.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Terrain",
  "type": "object",
  "properties": {
    "name": { "$ref": "/schema/enum.json#/definitions/terrain_sprite" },
    "terrain": {
      "type": "integer",
      "description": "Uses index of enum/terrain as an id reference.",
      "minimum": 0,
      "maximum": 18
    },
    "defense": { "type": "integer", "minimum": 0, "maximum": 4 },
    "health": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "can_capture": {
      "type": "boolean"
    },
    "owner": {
      "type": "integer",
      "description": "0 = neutral, all other numbers coorespond to player number",
      "minimum": 0
    },
    "description": { "type": "string" }
  },
  "required": [
    "name",
    "health",
    "mp",
    "ammo",
    "fuel",
    "turn_fuel",
    "hidden_turn_fuel",
    "vision",
    "min_range",
    "max_range",
    "movement_type",
    "cost",
    "can_supply",
    "can_capture",
    "can_move_and_attack",
    "can_hide",
    "can_dive",
    "weapons",
    "damage_table",
    "can_carry",
    "carrying_types",
    "carrying_size",
    "description"
  ]
}
